# /etc/profile: system-wide .profile file for the Bourne shell (sh(1))
# and Bourne compatible shells (bash(1), ksh(1), ash(1), ...).

echo "Welcome to the Torizon WSL 2 v0.0.10"

export PATH

if [ "${PS1-}" ]; then
  if [ "${BASH-}" ] && [ "$BASH" != "/bin/sh" ]; then
    # The file bash.bashrc already sets the default PS1.
    # PS1='\h:\w\$ '
    if [ -f /etc/bash.bashrc ]; then
      . /etc/bash.bashrc
    fi
  else
    if [ "$(id -u)" -eq 0 ]; then
      PS1='# '
    else
      PS1='$ '
    fi
  fi
fi

if [ -d /etc/profile.d ]; then
  for i in /etc/profile.d/*.sh; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi

# the Torizon WSL Utils use slint
export SLINT_STYLE="fluent-dark"
export WSL_DISTRO_NAME="Torizon"

# execute the Torizon WSL2 specific script
boot.ps1

# check the return code from the boot
if [ $? -eq 0 ] ; then
  # check if there is the /mnt/wsl/docker.sock and is this is a socket file
  if [ -S /mnt/wsl/docker.sock ]; then
    echo "Docker is running!"
  else
    # create the symbolic link to the docker.sock for the other WSL2 instances
    rm -rf /mnt/wsl/docker.sock
    ln -sf /var/run/docker.sock /mnt/wsl/docker.sock
  fi

  mkdir -p ~/.log
  # run the telemetry in the background
  sudo -E /opt/telemetry/telemetry > ~/.log/telemetry.log 2>&1 & disown

  # run the updater in the background
  sudo -E /opt/updater/updater.ps1 > ~/.log/updater.log 2>&1 & disown

  echo "Success"
else
  echo "Bye!"
  wsl.exe -t Torizon
  exit
fi
